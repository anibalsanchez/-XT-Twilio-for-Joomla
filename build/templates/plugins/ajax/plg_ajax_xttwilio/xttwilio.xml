<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.8" group="ajax" method="upgrade">
  <name>PLG_AJAX_[TRANSLATION_KEY]</name>
  <version>[RELEASE_VERSION]</version>
  <creationDate>[DATE]</creationDate>

[MANIFEST_COPYRIGHT]

  <description>PLG_AJAX_[TRANSLATION_KEY]_XML_DESCRIPTION</description>
  <!-- Scripts to run on installation -->
  <scriptfile>script.php</scriptfile>
  <!-- Language files -->
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_ajax_[EXTENSION_ALIAS].ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_ajax_[EXTENSION_ALIAS].sys.ini</language>
  </languages>
  <!-- Plugin files -->
  <files>
    <filename plugin="[EXTENSION_ALIAS]">[EXTENSION_ALIAS].php</filename>
  </files>
  <!-- Config parameter -->
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="account_sid" type="text" label="PLG_AJAX_[TRANSLATION_KEY]_ACCOUNT_SID_LABEL" description="PLG_AJAX_[TRANSLATION_KEY]_ACCOUNT_SID_DESCRIPTION"/>
        <field name="auth_token" type="text" label="PLG_AJAX_[TRANSLATION_KEY]_AUTH_TOKEN_LABEL" description="PLG_AJAX_[TRANSLATION_KEY]_AUTH_TOKEN_DESCRIPTION"/>
        <field name="phone_number" type="text" label="PLG_AJAX_[TRANSLATION_KEY]_PHONE_NUMBER_LABEL" description="PLG_AJAX_[TRANSLATION_KEY]_PHONE_NUMBER_DESCRIPTION" filter="integer"/>
        <field name="agent_phone_number" type="text" label="PLG_AJAX_[TRANSLATION_KEY]_AGENT_PHONE_NUMBER_LABEL" description="PLG_AJAX_[TRANSLATION_KEY]_AGENT_PHONE_NUMBER_DESCRIPTION" filter="integer"/>
      </fieldset>
      <fieldset name="advanced">
				<field
					name="enable_lookupflex"
					type="radio"
					label="PLG_AJAX_[TRANSLATION_KEY]_FIELD_ENABLE_LOOKUPFLEX_LABEL"
					description="PLG_AJAX_[TRANSLATION_KEY]_FIELD_ENABLE_LOOKUPFLEX_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					filter="integer"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="workspace_sid"
					type="text"
					label="PLG_AJAX_[TRANSLATION_KEY]_FIELD_FLEX_WORKSPACE_SID_LABEL"
					description="PLG_AJAX_[TRANSLATION_KEY]_FIELD_FLEX_WORKSPACE_SID_DESC"
          showon="enable_lookupflex:1"
				/>

				<field
					name="workflow_sid"
					type="text"
					label="PLG_AJAX_[TRANSLATION_KEY]_FIELD_FLEX_WORKFLOW_SID_LABEL"
					description="PLG_AJAX_[TRANSLATION_KEY]_FIELD_FLEX_WORKFLOW_SID_DESC"
          showon="enable_lookupflex:1"
				/>
      </fieldset>
    </fields>
  </config>
	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="[EXTENSION_NAME]">[EXTENSION_CDN]/update-plg_ajax_[EXTENSION_ALIAS].xml</server>
	</updateservers>
</extension>
