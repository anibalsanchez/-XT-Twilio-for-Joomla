<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8.0" type="package" method="upgrade">
  <packagename>xttwilio</packagename>
  <packager>Extly, CB</packager>
  <packagerurl>https://www.extly.com</packagerurl>
  <name>XT Twilio for Joomla</name>
  <description>A solution to call your clients for Joomla, via SMS, Voice or video channels.</description>
  <version>1.0.0</version>
  <creationDate>2018-10-23</creationDate>

	<author>Extly, CB</author>
	<authorEmail>team@extly.com</authorEmail>
	<authorUrl>https://www.extly.com</authorUrl>
	<copyright>Copyright (c)2007-2018 Extly, CB All rights reserved.</copyright>
	<license>GNU/GPLv3 www.gnu.org/licenses/gpl-3.0.html</license>

  <!-- List of extensions to install -->
  <files>
    <!-- Component -->
    <file type="component" id="com_xttwilio">component</file>

    <!-- CLI scripts -->
    <file type="file" id="xttwilio">file</file>

    <!-- Template -->
    <file type="template" client="site" id="tpl_xttwilio">template</file>

    <!-- Modules -->
    <file type="module" client="site" id="mod_xttwilio">mod_xttwilio</file>
    <!-- <file type="module" client="administrator" id="mod_xttwilio">mod_xttwilio</file> -->

    <!-- Library -->
    <file type="library" id="lib_xttwilio">library</file>

    <!-- Plugins: xttwilio  -->
    <file type="plugin" group="authentication" id="xttwilio">plg_authentication_xttwilio</file>
    <file type="plugin" group="behaviour" id="xttwilio">plg_behaviour_xttwilio</file>
    <file type="plugin" group="content" id="xttwilio">plg_content_xttwilio</file>
    <file type="plugin" group="editors-xtd" id="xttwilio">plg_editors-xtd_xttwilio</file>
    <file type="plugin" group="fields" id="xttwilio">plg_fields_xttwilio</file>
    <file type="plugin" group="finder" id="xttwilio">plg_finder_xttwilio</file>
    <file type="plugin" group="search" id="xttwilio">plg_search_xttwilio</file>
    <file type="plugin" group="system" id="xttwilio">plg_system_xttwilio</file>
    <file type="plugin" group="user" id="xttwilio">plg_user_xttwilio</file>
  </files>
  <!-- Installation script -->
  <scriptfile>script.xttwilio.php</scriptfile>
  <!-- Update servers -->
  <updateservers>
    <server type="extension" priority="1" name="XT Twilio for Joomla">http://cdn.extly.com/update-pkg_xttwilio.xml</server>
  </updateservers>
</extension>
